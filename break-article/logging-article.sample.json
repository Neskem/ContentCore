{
    "version": 1,
    "disable_existing_loggers": false,
    "filters": {
        "request_id": {
            "()": "breakarticle.atomlogging.RequestIdFilter"
        }
    },
    "formatters": {
        "simple": {
            "format": "%(asctime)s - %(name)s.%(module)s.%(funcName)s:%(lineno)d - %(levelname)s - %(request_id)s - %(message)s"
        }
    },
    "handlers": {
        "default": {
            "class": "logging.handlers.WatchedFileHandler",
            "level": "INFO",
            "formatter": "simple",
            "filters": ["request_id"],
            "filename": "/var/log/breaktime/app-article.log",
            "encoding": "utf8"
        },
        "default_DEBUG": {
            "class": "logging.handlers.WatchedFileHandler",
            "level": "DEBUG",
            "formatter": "simple",
            "filters": ["request_id"],
            "filename": "/var/log/breaktime/app-article_debug.log",
            "encoding": "utf8"
        }
    },
    "root": {
        "level": "INFO",
        "handlers": [
            "default"
        ]
    },
    "loggers": {
        "logger_admin": {
            "level": "DEBUG",
            "handlers": [
                "default_DEBUG"
            ],
            "qualname": [
                "logger_admin"
            ],
            "propagate": [
                "0"
           ]
        }
    }
}
